			<Label position="160,100" name="resident_count_5"/>
			<Label name="resident_6" position="10,120" text="6 residents"/>
			<Label position="160,120" name="resident_count_6"/>
			<Label name="resident_7" position="10,140" text="7 residents"/>
			<Label position="160,140" name="resident_count_7"/>
			<Label name="resident_8" position="10,160" text="8 residents"/>
			<Label position="160,160" name="resident_count_8"/>
		</Container>

		<Container size="260,60" position="25,360">
			<Label name="headline_residents_total" position="0,0" text="Summary" />
			<Label name="houses" position="10,20" text="houses"/>
			<Label position="160,20" name="house_count"/>
			<Label name="residents" position="10,40" text="residents"/>
			<Label position="160,40" name="resident_count"/>
