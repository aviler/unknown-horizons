		down_image="content/gui/icons/widgets/minimap/rotate_left_h.png"
		hover_image="content/gui/icons/widgets/minimap/rotate_left_h.png"
		helptext="Rotate map counterclockwise (,)"
		is_focusable="0" />
	<ImageButton name="rotateRight" position="150,19"
		up_image="content/gui/icons/widgets/minimap/rotate_right.png"
		down_image="content/gui/icons/widgets/minimap/rotate_right_h.png"
		hover_image="content/gui/icons/widgets/minimap/rotate_right_h.png"
		helptext="Rotate map clockwise (.)"
		is_focusable="0" />

	<ToggleImageButton name="zoomIn" position="195,63"
		inactive_image="content/gui/icons/widgets/minimap/zoom_in_bw.png"
		up_image="content/gui/icons/widgets/minimap/zoom_in.png"
		down_image="content/gui/icons/widgets/minimap/zoom_in_h.png"
		hover_image="content/gui/icons/widgets/minimap/zoom_in_h.png"
		helptext="Zoom in"
		is_focusable="0" />
	<ToggleImageButton name="zoomOut" position="195,105"
		inactive_image="content/gui/icons/widgets/minimap/zoom_out_bw.png"
		up_image="content/gui/icons/widgets/minimap/zoom_out.png"
		down_image="content/gui/icons/widgets/minimap/zoom_out_h.png"
		hover_image="content/gui/icons/widgets/minimap/zoom_out_h.png"
		helptext="Zoom out"
		is_focusable="0" />
</Container>

