<?xml version="1.0"?>

<Container size="230,230" name="mainhud"> <!-- positioning happens in ingamegui#init -->
<!-- This size only needs to be "210,230", but is larger to prevent accidental scrolling.
In case you change the size of this Container, also adapt the ingamegui positioning value.  -->
<!-- The actual minimap Icon is placed after everything else so that it gets focus  -->

<Container name="background_and_buttons" position="-30,0" size="240,240">
	<Icon name="minimap_overlay_image" position="31, 1"
		image="content/gui/images/background/widgets/map_bg.png" />
	<Label name="speed_text" text="" position="48,88" font="small_black"/>

	<ToggleImageButton name="speedUp" position="48,63"
		inactive_image="content/gui/icons/widgets/minimap/speed_up_bw.png"
		up_image="content/gui/icons/widgets/minimap/speed_up.png"
		down_image="content/gui/icons/widgets/minimap/speed_up_h.png"
		hover_image="content/gui/icons/widgets/minimap/speed_up_h.png"
		helptext="Increase game speed (+)"
		is_focusable="0" />
	<ToggleImageButton name="speedDown" position="48,105"
		inactive_image="content/gui/icons/widgets/minimap/speed_down_bw.png"
		up_image="content/gui/icons/widgets/minimap/speed_down.png"
		down_image="content/gui/icons/widgets/minimap/speed_down_h.png"
		hover_image="content/gui/icons/widgets/minimap/speed_down_h.png"
		helptext="Decrease game speed (-)"
		is_focusable="0" />

	<ImageButton name="rotateLeft" position="96,19"
